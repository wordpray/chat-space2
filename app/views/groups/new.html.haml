.chat-group-form
  %h1 新規チャットグループ
  = form_for @group,html:{id: 'new_chat_group', class: 'new_chat_group'} do |f|
    =render 'errormessage'
    .chat-group-form__field.clearfix
      .chat-group-form__field--left
        = f.label :name, "グループ名", class: 'chat-group-form__label'
      .chat-group-form__field--right
        = f.text_field :name, id:'chat_group_name',class: 'chat-group-form__input', placeholder: "グループ名を入力して下さい"
      .chat-group-form__field.clearfix
        .chat-group-form__field--left
          .chat-group-form__label
            = f.label :name, "チャットメンバーを追加"
        .chat-group-form__field--right
          .chat-group-form__search.clearfix
            %input.chat-group-form__input.js{placeholder: "追加したいユーザー名を入力してください"}
              #user-search-result
    .chat-group-form__field.clearfix
      .chat-group-form__field--left
        = f.label :users, 'チャットメンバー' , class: "chat-group-form__label"
      .chat-group-form__field--right
        #user-add-result
    .chat-group-form__field.clearfix
      .chat-group-form__field--left
      .chat-group-form__field--right
        = f.submit 'Save', class: 'chat-group-form__action-btn',type: "submit", name: "commit", data: {disable_with: "Save"}
