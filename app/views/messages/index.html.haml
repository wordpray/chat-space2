
= render 'common/sidebar'
.chat-main
  .chat-main__header
    .chat-main__header--group.clearfix
      .chat-main__header--group-name #{@group.name}
      = link_to "edit", edit_group_path(@group.id), class: 'chat-main__header--group-edit-btn'
      .chat-main__header--clearfix
    .chat-main__header-members 
      Member:
      #{@group.users.pluck(:name).join(" ")}
  .chat-main__body
    %ul.chat-main__body--messages-list
      - @messages.each do |message|
        %li.chat-main__message.clearfix
          %P.chat-main__message-name
            = message.user.name
          %P.chat-main__message-time
            = message.created_at.strftime("%Y/%m/%d %H:%M:%S")
          %P.chat-main__message-body
            = message.body
  .chat-main__footer
    = form_for [@group, @message], html: {class: 'chat-main__form'} do |f|
      .chat-main__footer__body
        = f.text_field :body, placeholder: "type a message", class: "message"
        = f.label :image, class: "image_file fa fa-picture-o" do
          = f.file_field :image, class: "image"
        = f.submit "send", class: "send-button"
