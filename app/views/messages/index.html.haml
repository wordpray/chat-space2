
= render 'common/sidebar'
.chat-main
  .chat-main__header
    .chat-main__header--group.clearfix
      .chat-main__header--group-name #{@group.name}
      = link_to "edit", edit_group_path(@group.id), class: 'chat-main__header--group-edit-btn'
      .chat-main__header--clearfix
    .chat-main__header-members 
      Member:
      #{@group.users.pluck(:name).join(" ")}
  .chat-main__body
    %ul.chat-main__body--messages-list
      %li.chat-main__message.clearfix
        %P.chat-main__message-name Name
        %P.chat-main__message-time 2017/06/02
        %P.chat-main__message-body こんにちは！
      %li.chat-main__message.clearfix
        %P.chat-main__message-name Name
        %P.chat-main__message-time 2017/06/02
        %P.chat-main__message-body こんにちは！
  .chat-main__footer
    %form
      .chat-main__footer__body
        %input{ placeholder: "type a message" ,class: "message" ,type: "text" }
        %label
          %i.fa.fa-picture-o
      %input{ type: "submit",value: "Send",class: "send-button" }
